<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_15sdp"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"

    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_15sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardElevation="5dp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"

            >

            <TextView
                android:id="@+id/complete_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_17sdp"
                android:fontFamily="@font/open_sans_regular"
                android:letterSpacing="0.05"
                android:text="05"
                android:textColor="@color/deep_Grey"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"

                android:layout_marginBottom="@dimen/_17sdp"
                android:fontFamily="@font/roboto700"
                android:gravity="center"
                android:text="Complete"
                android:textColor="@color/complete"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            app:cardElevation="5dp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"

            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/pending_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/deep_Grey"
                android:letterSpacing="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:text="25"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto700"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@color/pending"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            app:cardElevation="5dp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            android:layout_weight="0.5"
            >
            <TextView
                android:id="@+id/incomplete_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textColor="@color/deep_Grey"
                android:fontFamily="@font/open_sans_regular"
                android:text="00"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto700"
                android:gravity="center"
                android:text="Skipped"
                android:textColor="@color/incomplete"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_80sdp"
            app:cardElevation="5dp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >
            <TextView
                android:id="@+id/total_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_17sdp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textColor="@color/deep_Grey"
                android:fontFamily="@font/open_sans_regular"
                android:text="30"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"

                android:layout_marginBottom="@dimen/_17sdp"
                android:fontFamily="@font/roboto700"
                android:gravity="center"
                android:text="Total"
                android:textColor="@color/phantom_black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>